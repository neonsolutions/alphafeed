generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model alembic_version {
  version_num String @id(map: "alembic_version_pkc") @db.VarChar(32)
}

model feed_items {
  id              Int      @id @default(autoincrement())
  title_raw       String   @db.VarChar
  title           String?  @db.VarChar
  link            String  @unique @db.VarChar
  description_raw String   @db.VarChar
  description     String?  @db.VarChar
  published       DateTime @db.Timestamp(6)
  author          String   @db.VarChar
  scores          scores?
}

model scores {
  id           Int        @id @default(autoincrement())
  relevance    Float
  impact       Float
  novelty      Float
  reliability  Float
  feed_item_id Int         @unique
  feed_items   feed_items  @relation(fields: [feed_item_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}
